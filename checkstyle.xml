<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="warning"/>

    <module name="Indentation">
        <property name="basicOffset" value="4"/>
        <property name="braceAdjustment" value="0"/>
        <property name="caseIndent" value="4"/>
        <property name="throwsIndent" value="4"/>
        <property name="lineWrappingIndentation" value="4"/>
        <property name="arrayInitIndent" value="4"/>
        <property name="lineWrappingIndentation" value="4"/>
    </module>

    <module name="WhitespaceAround">
        <property name="allowEmptyCatch" value="false"/>
        <property name="allowEmptyFinally" value="false"/>
        <property name="allowEmptyIfParentheses" value="true"/>
        <property name="allowEmptyLoops" value="false"/>
        <property name="allowEmptyStatement" value="true"/>
        <property name="allowMultipleEmptyLines" value="false"/>
        <property name="ignoreEmptyLines" value="true"/>
        <property name="tokens" value="METHOD_DEF,CTOR_DEF,STATIC_INIT,INSTANCE_INIT"/>
    </module>
</module>
